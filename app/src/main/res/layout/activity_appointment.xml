<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="gravity"
    tools:context=".appointments.AppointmentActivity">

    <TextView
        android:id="@+id/appointmentCreationTxtEndTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Time"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/appointementCreationBtnReset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appointmentCreationBtnEndTime" />

    <EditText
        android:id="@+id/appointmentCreationEditTxtAppointmentTitleSet"
        android:layout_width="268dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="607dp"
        android:backgroundTint="@color/black"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="text"
        android:text="@string/appointment_title"
        android:textColor="#000000"
        android:textColorHint="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/appointmentCreationEditTxtAppointmentCourseSet"
        android:layout_width="246dp"
        android:layout_height="58dp"
        android:layout_marginTop="160dp"
        android:layout_marginBottom="607dp"
        android:backgroundTint="@color/black"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="text"
        android:text="@string/appointment_course"
        android:textColor="#000000"
        android:textColorHint="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.308" />

    <Button
        android:id="@+id/appointmentCreationBtnStartTime"
        android:layout_width="186dp"
        android:layout_height="46dp"
        android:text="@string/pick_start_time"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.322" />

    <Button
        android:id="@+id/appointmentCreationBtnEndTime"
        android:layout_width="180dp"
        android:layout_height="47dp"
        android:layout_marginTop="52dp"
        android:layout_marginBottom="56dp"
        android:text="@string/pick_end_time"
        app:layout_constraintBottom_toTopOf="@+id/appointementCreationBtnReset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appointmentCreationBtnStartTime" />

    <Button
        android:id="@+id/appointmentCreationbtnCreateAppointment"
        android:layout_width="328dp"
        android:layout_height="64dp"
        android:layout_marginTop="16dp"
        android:text="@string/done_create_appointment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appointementCreationBtnReset" />

    <Button
        android:id="@+id/appointementCreationBtnReset"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:text="@string/reset"
        app:layout_constraintBottom_toTopOf="@+id/appointmentCreationbtnCreateAppointment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/appointmentCreationtxtError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appointmentCreationbtnCreateAppointment" />

    <TextView
        android:id="@+id/appointmentCreationTxtWarning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="5dp"
        android:text="@string/maximum_duration_of_an_appointment_is_4h"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appointmentCreationbtnCreateAppointment"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/appointmentCreationTxtStartTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Time"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/appointmentCreationBtnEndTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appointmentCreationBtnStartTime" />
</androidx.constraintlayout.widget.ConstraintLayout>