<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.polysmee">

    <uses-permission android:name="android.permission.USE_FULL_SCREEN_INTENT" />

    <application
        android:allowBackup="true"
        android:largeHeap="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Polysmee"
        android:usesCleartextTraffic="true">
        <activity android:name=".appointments.AppointmentActivity" />
        <activity
            android:name=".settings.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity android:name=".calendar.CalendarEntryDetailsActivity" />
        <activity android:name=".calendar.CalendarActivity" />

        <receiver android:name=".notification.AppointmentReminderNotificationPublisher" />

        <activity android:name=".login.LoginActivity" />
        <activity android:name=".room.RoomActivity" />
        <activity android:name=".room.RoomActivityInfo" />

        <receiver android:name=".notification.AppointmentReminderNotificationPublisher" />

        <activity android:name=".login.LoginCheckActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>